<h2>Create Username</h2>

<%= simple_form_for :guestUser, url: "/username", method: "POST" do |f| %>
  <div class="form-inputs">
    <%= f.input :username, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Create Username", :class => "btn btn-success" %>
  </div>
<% end %>